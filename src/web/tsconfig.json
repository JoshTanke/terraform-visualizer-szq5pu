{
  "compilerOptions": {
    // ECMAScript Target and Features
    "target": "ES2022",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "module": "ESNext",
    
    // Module Resolution
    "moduleResolution": "bundler",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "resolveJsonModule": true,
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    
    // React Configuration
    "jsx": "react-jsx",
    
    // Type Checking
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    
    // JavaScript Support
    "allowJs": true,
    "skipLibCheck": true,
    
    // Emit Configuration
    "noEmit": true,
    
    // Interop Constraints
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    
    // Type Definitions
    "types": [
      "vite/client",
      "jest",
      "@testing-library/jest-dom"
    ]
  },
  
  // Project Files
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "tests/**/*.ts",
    "tests/**/*.tsx"
  ],
  
  // Excluded Files/Folders
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "coverage"
  ],
  
  // Project References
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}