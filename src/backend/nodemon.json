{
  "watch": [
    "src/**/*.ts"
  ],
  "ignore": [
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "tests/**/*",
    "src/**/__tests__/*",
    "src/**/__mocks__/*"
  ],
  "ext": ".ts,.js,.json",
  "exec": "ts-node -r tsconfig-paths/register src/server.ts",
  "verbose": true,
  "env": {
    "NODE_ENV": "development"
  },
  "delay": "1000",
  "legacyWatch": false
}