# Server Configuration
# Application environment (development|staging|production)
NODE_ENV=development
# Backend server port for HTTP requests
PORT=3000

# Authentication Configuration
# Secret key for JWT token signing and verification
JWT_SECRET=your-secure-jwt-secret-key
# JWT token expiration time in time format (e.g., 1h, 7d)
JWT_EXPIRATION=1h
# GitHub OAuth application client ID for authentication
GITHUB_CLIENT_ID=your-github-oauth-client-id
# GitHub OAuth application client secret for authentication
GITHUB_CLIENT_SECRET=your-github-oauth-client-secret
# GitHub OAuth callback URL for authentication completion
GITHUB_CALLBACK_URL=http://localhost:3000/auth/github/callback

# Database Configuration
# MongoDB connection URI with host, port, and database
MONGODB_URI=mongodb://localhost:27017/terraform-visualizer
# MongoDB database name for the application
MONGODB_DB_NAME=terraform-visualizer
# MongoDB username for authentication
MONGODB_USER=admin
# MongoDB password for authentication
MONGODB_PASSWORD=secure-password

# Cache Configuration
# Redis server hostname or IP address
REDIS_HOST=localhost
# Redis server port number
REDIS_PORT=6379
# Redis server password for authentication (optional)
REDIS_PASSWORD=your-redis-password

# WebSocket Configuration
# WebSocket server port for real-time communication
WS_PORT=3001
# WebSocket endpoint path for client connections
WS_PATH=/ws